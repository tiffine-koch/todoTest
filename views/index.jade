block content

  h2 Much Todo About Everything
  
  .container
    form.form-inline(action='')
      .form-group
        label(for='task') Task Name
        input(type='text', placeholder='enter task', ng-model='task.name')
      .form-group
        label(for='date') Date
        input(type='date', placeholder='', ng-model='task.date')  
      button.btn.btn-success(ui-sref='home') Create New Task
    
    h3 Current Tasks
        
    table.table
      thead
        tr
          td Task Name
          td Task Date
          td Is Completed
        tbody
        tr
          td
          td
          td
            input(type='checkbox', value='', ng-model='task.completed')
      
    ui-view


      
      
